# ================================================
# Aliases for Python and System Utilities
# ================================================

# Use python3 as the default python command
alias python="/usr/local/bin/python3"

# Directory of the media metadata scraper
alias metadata_hub="cd /Volumes/Digital\ Life/metadata_hub && python3 main.py"

# Releases unused space in a sparsebundle
alias sparse_clean='hdiutil compact'

# Alias for upgrading MKVToolNix
alias upgrade_mkvtoolnix='brew upgrade --cask mkvtoolnix'

# Display Unix time every second
alias unix_time='while true; do date +%s; sleep 1; done'

# Clear macOS system preferences notifications
alias cleardot='defaults write com.apple.systempreferences AttentionPrefBundleIDs 0 && Killall Dock'

# Aliases for Customizing PS1 (Prompt)
alias no_user_prompt='export PS1="%m: %1~$ "'
alias root_prompt='export PS1="root@%m: %1~$ "'
alias restore_prompt='export PS1="%n@%m %1~$ "'
